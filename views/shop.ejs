<%- include('./partials/header') %>
 <% if(success.length>0){ %>
<div
  class="absolute md:top-5 top-[95%]  left-1/2 left-0 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500"
>
  <span class="inline-block mt-1 mb-1 text-white"> <%= success %> </span>
</div>
<% } %>

<div class="w-full h-screen flex items-start font-[poppins] overflow-y-hidden">
  <div class="w-[25%] bg-gray-300 flex h-screen flex-col items-start md:block hidden">
    <div class="flex items-center gap-2 px-10 pt-40 pb-20">
      <h3 class="text-[1.5vw]">sort by :</h3>
      <form action="/shop">
        <select
          class="border-[5%] bg-gray-200 px-2 py-1 w-[110%] ml-[2vw]"
          name="sortby"
          id=""
        >
          <option value="popular" class="bg-gray-400">Popular</option>
          <option value="newest">Newest</option>
        </select>
      </form>
    </div>
    <div class="flex flex-col w-full mt-10">
      <hr />
      <a
        class="block w-full pb-4 text-[1.5vw] pl-[15%] py-5 hover:bg-gray-500 hover:duration-150"
        href=""
        >New Collection</a
      >
      <hr />
      <a
        class="block w-full pb-4 text-[1.5vw] pl-[15%] py-5 hover:bg-gray-500 hover:duration-150"
        href="/shop"
        >All Products</a
      >
      <hr />
      <a
        class="block w-full pb-4 text-[1.5vw] pl-[15%] py-5 hover:bg-gray-500 hover:duration-150"
        href="/shop/discount"
        >Discounted Products</a
      >
      <hr />
    </div>
    <div class="mt-32">
      <a class="block w-fit mb-2 px-10 py-1 text-[1.1vw]" href=""
        >Filter by :</a
      >
      <a class="block w-fit mb-2 px-10 py-1 text-[1.1vw]" href=""
        >Availability</a
      >
      <a
        class="block w-fit mb-2 px-10 py-1 text-[1.1vw]"
        href=""
        id="discounted-btn"
        >Discount</a
      >
    </div>
  </div>

  <div class="md:w-[75%] w-full flex flex-col gap-5 h-screen">
    <div class="relative border-b-2 w-full h-[10%] flex items-center">
      <div class="flex absolute right-[7%] gap-4 end">
        <a href="/shop" class="hover:text-red-400">Shop</a>
        <a href="/cart" class="hover:text-red-400">Cart</a>
        <a href="/owners/admin" class="hover:text-red-400">Admin</a>
        <a href="/users/logout" class="hover:text-red-400 text-red-700"
          >Logout
          </a
>
      </div>
    </div>

    <div
      class="flex w-full md:h-[75%] h-[100%] flex-wrap items-start gap-5 overflow-y-auto md:m-0 ml-[15%]"
      id="products"
    >
      <% products.forEach(function(product){ %>
      <div class="product w-60 mb-2 ml-[2%]">
        <div
          class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>] bg-[<%= product.bgcolor %>]-400"
        >
          <img
            class="h-[12rem]"
            src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
            alt=""
          />
        </div>
        <div
          class="flex justify-between bg-[<%= product.panelcolor %>] bg-[<%= product.panelcolor %>]-400  items-center px-4 py-4 text-[<%= product.textcolor %>]"
        >
          <div>
            <h3><%= product.name %></h3>
            <div class="flex gap-3">
              <h4>â‚¹ <%= product.price %></h4>

              <% if(product.discount != 0 ){ %>
              <h4
                class="bg-[<%= product.textcolor %>] bg-[<%= product.textcolor %>]-400 text-[<%= product.bgcolor %>] rounded-full px-1"
              >
                <%= product.discount %>%
              </h4>
              <% } %>
            </div>
          </div>
          <a
            class="w-7 h-7 flex items-center justify-center rounded-full bg-white"
            href="/addToCart/<%= product._id %>"
          >
            <i class="ri-add-line"></i>
          </a>
        </div>
      </div>
      <%})%>
    </div>
  </div>
</div>
<%- include('./partials/footer') %>
